<p id="notice"><%= notice %></p>

<h1><%= t('inicio.coin')  %></h1>
<table class="table table-hover" >
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:descripcion)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag(coin.url_image, size: "25x25") %></td>
        <td><%= mostrar_acronym(coin) %></td>
         
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: t('inicio.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('botao.new'), new_coin_path, class:"btn btn-primary" %>