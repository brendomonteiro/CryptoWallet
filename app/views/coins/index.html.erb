<p id="notice"><%= notice %></p>

<h1>Coins</h1>
<h2> <%= cookies[:curso] %> </h2>
<h2> <%= session[:curso] %> </h2>

<table>
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:descripcion)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag(coin.url_image, size: "25x25") %></td>
        <td><%= mostrar_acronym(coin) %></td>
         
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path %>
